{
  "manifest_version": 3,
  "name": "Unix Timestamp Tooltip â€“ Epoch Time Converter",
  "version": "1.1.0",
  "description": "Convert Unix timestamps (epoch time) to human-readable dates directly on any webpage.",
  "permissions": ["storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "devtools_page": "devtools.html",
  "commands": {
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+T"
      },
      "description": "Toggle Unix Timestamp Tooltip"
    }
  }
}
