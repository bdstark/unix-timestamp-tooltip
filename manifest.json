{
  "manifest_version": 3,
  "name": "Unix Timestamp Tooltip",
  "version": "1.1.0",
  "description": "Shows human-readable dates for Unix timestamps",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "devtools_page": "devtools.html",
  "commands": {
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+T"
      },
      "description": "Toggle Unix Timestamp Tooltip"
    }
  }
}